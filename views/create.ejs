<!DOCTYPE html>
<html lang="en">
  <%-include('layouts/header');-%>

  <body>
    <%-include('layouts/navbar');-%>
    <!-- Page Header -->
    <header
      class="masthead"
      style="background-image: url('/img/contact-bg.jpg');"
    >
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Create New Post</h1>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <form
            action="/posts/store"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Title</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="title"
                  id="title"
                  name="title"
                />
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Subtitle</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="subtitle"
                  id="subtitle"
                  name="subtitle"
                />
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Description</label>
                <textarea
                  rows="5"
                  class="form-control"
                  id="body"
                  name="body"
                ></textarea>
                <script>
                  $("#body").summernote({
                    placeholder: "Description",
                    tabsize: 2,
                    height: 200,
                  });
                </script>
              </div>
            </div>
            <br />
            <div class="control-group">
              <div class="form-group floating-label-form-group controls">
                <label>Image</label>
                <input
                  type="file"
                  class="form-control"
                  id="image"
                  name="image"
                />
              </div>
            </div>
            <div class="form-group">
              <button
                type="submit"
                class="btn btn-primary"
                id="sendMessageButton"
              >
                Send
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <hr />

    <%- include('layouts/footer') %> <%- include('layouts/scripts') %>
  </body>
</html>
